{
  "name": "Blim",
  "version": "1.0",
  "description": "Help manage stored links!",
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "assets/js/common.js",
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Blim Page Manager",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/img/blim16.png",
      "32": "assets/img/blim32.png",
      "48": "assets/img/blim48.png",
      "128": "assets/img/blim128.png"
    }
  },
  "icons": {
    "16": "assets/img/blim16.png",
    "32": "assets/img/blim32.png",
    "48": "assets/img/blim48.png",
    "128": "assets/img/blim128.png"
  },
  "manifest_version": 2
}