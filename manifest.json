{
    "name": "Blim",
    "version": "1.0",
    "description": "Help manage stored links!",
    "permissions": ["tabs","declarativeContent","storage","unlimitedStorage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "browser_action": {
        "default_title": "Google Mail",    
        "default_popup": "popup.html"       
      },
    "manifest_version": 2
  }